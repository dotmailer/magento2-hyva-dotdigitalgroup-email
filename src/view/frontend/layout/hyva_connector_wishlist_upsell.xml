<?xml version="1.0"?>
<!-- The contents of this file have been copied directly from the original module -->
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <update handle="formkey"/>

    <container name="root">
        <block name="ddg.wishlist.upsell.container"
               class="Dotdigitalgroup\Email\Block\Recommended\Wishlistproducts"
               template="Dotdigitalgroup_Email::product/list.phtml"
               cacheable="false">
            <block class="Magento\Framework\Pricing\Render" name="ddg.product.price.render.default">
                <arguments>
                    <argument name="price_render_handle" xsi:type="string">catalog_product_prices</argument>
                    <argument name="use_link_for_as_low_as" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </block>
    </container>
</layout>
